{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "2017"
    },
    "globals": {
        "describe": false,
        "it": false,
        "context": false,
        "beforeEach": false,
        "afterEach": false,
        "before": false,
        "after": false
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "MemberExpression": "off"
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": [
            "error"
        ],
        "no-template-curly-in-string": [
            "error"
        ]
    }
}
